<p id="notice"><%= notice %></p>

<h1>Ncr Departments</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ncr_departments.each do |ncr_department| %>
      <tr>
        <td><%= ncr_department.name %></td>
        <td><%= link_to 'Show', ncr_department %></td>
        <td><%= link_to 'Edit', edit_ncr_department_path(ncr_department) %></td>
        <td><%= link_to 'Destroy', ncr_department, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

