<p id="notice"><%= notice %></p>

<h1>Ncrs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ncrs.each do |ncr| %>
      <tr>
        <td><%= ncr.name %></td>
        <td><%= link_to 'Show', ncr %></td>
        <td><%= link_to 'Edit', edit_ncr_path(ncr) %></td>
        <td><%= link_to 'Destroy', ncr, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

