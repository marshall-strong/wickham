<p id="notice"><%= notice %></p>

<h1>Ncr Items</h1>

<table>
  <thead>
    <tr>
      <th>Category</th>
      <th>Item name</th>
      <th>Is active at pos</th>
      <th>Is active online</th>
      <th>Description</th>
      <th>Sales price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ncr_items.each do |ncr_item| %>
      <tr>
        <td><%= ncr_item.category_id %></td>
        <td><%= ncr_item.item_name %></td>
        <td><%= ncr_item.is_active_at_pos %></td>
        <td><%= ncr_item.is_active_online %></td>
        <td><%= ncr_item.description %></td>
        <td><%= ncr_item.sales_price %></td>
        <td><%= link_to 'Show', ncr_item %></td>
        <td><%= link_to 'Edit', edit_ncr_item_path(ncr_item) %></td>
        <td><%= link_to 'Destroy', ncr_item, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

