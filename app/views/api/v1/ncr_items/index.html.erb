<h1>Ncr Items</h1>

<table>
  <thead>
    <tr>
      <th>External</th>
      <th>Category</th>
      <th>Item name</th>
      <th>Description</th>
      <th>Variation types</th>
      <th>Variations</th>
      <th>Barcode</th>
      <th>Track inventory</th>
      <th>Prompt for price</th>
      <th>Unit cost</th>
      <th>Price</th>
      <th>Sold by weight measure</th>
      <th>Tax category</th>
      <th>Available for sale on pos</th>
      <th>Available for sale online</th>
      <th>Online item name</th>
      <th>Package cost</th>
      <th>Units per package</th>
      <th>Primary vendor</th>
      <th>Units on hand</th>
      <th>Modified by 1</th>
